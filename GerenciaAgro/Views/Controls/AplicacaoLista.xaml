<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GerenciaAgro.Views.Controls.AplicacaoLista"
             Title="Lista de Aplicações"
             BackgroundColor="White">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Image Source="logo.jpeg" HorizontalOptions="Center" HeightRequest="80"/>
        <Label Text="APLICAÇÕES CADASTRADAS"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="Green"
               HorizontalOptions="Center"
               Margin="0,0,0,10"/>

        <Button Text="Nova Aplicação"
                BackgroundColor="Green"
                TextColor="White"
                CornerRadius="10"
                FontAttributes="Bold"
                HeightRequest="45"
                Clicked="OnNovaAplicacaoClicked"
                Margin="0,0,0,10"/>

        <Frame BorderColor="#CCCCCC" CornerRadius="10" Padding="0" HasShadow="True">
            <CollectionView x:Name="AplicacaoCollectionView"
                            ItemsSource="{Binding Aplicacoes}"
                            SelectionMode="None">
                <CollectionView.Header>
                    <Grid ColumnDefinitions="Auto,2*,2*,2*,2*" Padding="10" BackgroundColor="#F0F0F0">
                        <Label Text="" />
                        <Label Text="Cultivo" FontAttributes="Bold" TextColor="Black" Grid.Column="1"/>
                        <Label Text="Praga(s)" FontAttributes="Bold" TextColor="Black" Grid.Column="2"/>
                        <Label Text="Agrotóxico" FontAttributes="Bold" TextColor="Black" Grid.Column="3"/>
                        <Label Text="Data" FontAttributes="Bold" TextColor="Black" Grid.Column="4"/>
                    </Grid>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto,2*,2*,2*,2*" Padding="10" RowSpacing="0" BackgroundColor="#F0F0F0">
                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" VerticalOptions="Center"/>
                            <Label Text="{Binding Cultivo}" TextColor="Black" Grid.Column="1" VerticalOptions="Center"/>
                            <Label Text="{Binding Pragas}" TextColor="Black" Grid.Column="2" VerticalOptions="Center"/>
                            <Label Text="{Binding Agrotoxico}" TextColor="Black" Grid.Column="3" VerticalOptions="Center"/>
                            <Label Text="{Binding DataAplicacao}" TextColor="Black" Grid.Column="4" VerticalOptions="Center"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label Text="Nenhuma aplicação cadastrada."
                           TextColor="Gray"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Padding="20"/>
                </CollectionView.EmptyView>
            </CollectionView>
        </Frame>

        <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
            <Button Text="Editar Selecionado"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="10"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    Clicked="OnEditarSelecionadoClicked"/>
            <Button Text="Excluir Selecionado"
                    BackgroundColor="#F44336"
                    TextColor="White"
                    CornerRadius="10"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    Clicked="OnExcluirSelecionadoClicked"/>
            <Button Text="Exportar para PDF"
                BackgroundColor="Green"
                TextColor="White"
                CornerRadius="10"
                HorizontalOptions="Center"
                Clicked="OnGerarPdfClicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>