<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GerenciaAgro.Views.Controls.AgrotoxicoControle"
             Title="AgrotoxicoControle"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Logo e título -->
            <Image Source="logo.jpeg" HorizontalOptions="Center" HeightRequest="100"/>
            <Label Text="CADASTRO AGROTÓXICO" FontSize="24" FontAttributes="Bold" TextColor="Green" HorizontalOptions="Center" />

            <!-- Campo Nome -->
            <Label Text="NOME" FontAttributes="Bold" TextColor="Black"/>
            <Frame BorderColor="Black" CornerRadius="5" Padding="0">
                <Entry x:Name="NomeEntry" TextColor="Black" BackgroundColor="White" />
            </Frame>

            <!-- Campo Lote -->
            <Label Text="LOTE" FontAttributes="Bold" TextColor="Black"/>
            <Frame BorderColor="Gray" CornerRadius="5" Padding="0">
                <Entry x:Name="LoteEntry" TextColor="Black" BackgroundColor="White" />
            </Frame>

            <!-- Campo Validade -->
            <Label Text="VALIDADE" FontAttributes="Bold" TextColor="Black"/>
            <Frame BorderColor="Gray" CornerRadius="5" Padding="0">
                <DatePicker x:Name="ValidadePicker" TextColor="Black" BackgroundColor="White" />
            </Frame>

            <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                <CheckBox x:Name="InativoCheckBox" Color="Black"/>
                <Label Text="Inativar item" VerticalOptions="Center" FontAttributes="Bold" TextColor="Black" Margin="8,0,0,0"/>
            </StackLayout>

            <!-- Campo Praga Alvo -->
            <Label Text="PRAGAS ALVO" FontAttributes="Bold" TextColor="Black"/>
            <Frame BorderColor="Gray" CornerRadius="5" Padding="0" BackgroundColor="White">
                <CollectionView x:Name="PragaAlvoCheckList"
                                SelectionMode="Multiple"
                                HeightRequest="150">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="8" ColumnDefinitions="30,*">
                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" VerticalOptions="Center" Color="Black"/>
                                <Label Text="{Binding Nome}" Grid.Column="1" VerticalOptions="Center" FontAttributes="Bold" TextColor="Black"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Frame>

            <!-- Botão Registrar -->
            <Button Text="REGISTRAR"
                    BackgroundColor="Green"
                    TextColor="Black"
                    CornerRadius="10"
                    Clicked="OnRegistrarClicked" />

            <!-- Rodapé com botões -->
            <Grid ColumnDefinitions="*,*" HeightRequest="70" BackgroundColor="Green">
                <ImageButton Source="anotacao.png" BackgroundColor="Transparent" 
                             Clicked="onRegistrarItemClicked"/>
                <ImageButton Source="livro.png" Grid.Column="1" BackgroundColor="Transparent" 
                             Clicked="onListarItemClicked"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
